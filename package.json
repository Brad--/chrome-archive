{
  "name": "archive",
  "version": "1.0.0",
  "description": "chrome tab archiver",
  "scripts": {
    "build": "npm run build:js && npm run copy",
    "build:js": "browserify archive.js -o dist/archive.browserify.js",
    "copy": "copyfiles ./icons/* manifest.json archive.css reset.css popup.html ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brad--/chrome-archive.git"
  },
  "license": "ISC",
  "devDependencies": {
    "browserify": "^16.5.1",
    "copyfiles": "^2.3.0"
  },
  "dependencies": {
    "uuid": "^8.3.0"
  }
}
